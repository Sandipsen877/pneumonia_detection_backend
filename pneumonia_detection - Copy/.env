# ====== CORE SETTINGS ======
FLASK_ENV=development                     # "production" in live deployments
SECRET_KEY=your-unique-secret-key-123     # Generate with: `openssl rand -hex 32`
JWT_SECRET_KEY=your-jwt-secret-456        # Generate separately from SECRET_KEY

# ====== DATABASE ======
DATABASE_URL=sqlite:///instance/app.db    # SQLite (dev). For production, use PostgreSQL:
# DATABASE_URL=postgresql://user:pass@localhost/prod_db

# ====== API & FRONTEND ======
API_BASE_URL=http://localhost:5000
FRONTEND_URL=http://localhost:3000
DEBUG_MODE=true                          # False in production

# ====== ML MODEL ======
MODEL_PATH=./static/models/pneumonia_model.pth

# ====== EMAIL (SMTP) ======
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password          # Use 2FA app password, not main password

# ====== SECURITY ======
WTF_CSRF_ENABLED=false                    # Enable in production if using web forms
JWT_ACCESS_TOKEN_EXPIRES=3600             # 1 hour (in seconds)